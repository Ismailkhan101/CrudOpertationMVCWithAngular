@model CrudOpertationMVCWithAngular.Models.Employee
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Crudseparate/Crudseparate.js"></script>
@{
    string name = Model.Name;
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Crudseparate/Crudseparate.js"></script>
<h2>Update Employee Information</h2>
<div ng-app="myApp" ng-controller="myCtrl">


    <!-- Initialize AngularJS model with server-side data -->
    <h2>Update Employee Information</h2>

    <!-- Initialize AngularJS model with server-side data -->
    <form ng-init="initialize({
         EmployeeID: @Model.EmployeeID,
         Name: '@Model.Name',
         Position: '@Model.Position',
         Salary: @Model.Salary })">
        <div class="form-group">
            <label>Name</label>
            <input type="text" ng-model="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Position</label>
            <input type="text" ng-model="Position" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Salary</label>
            <input type="number" ng-model="Salary" class="form-control" required />
        </div>
        <input type="text" id="employee" ng-value="EmployeeID" />

        <button type="submit" id="btnSave" value="Update" class="btn btn-warning" ng-click="InsertData()">Update</button>
    </form>


</div> @Html.Hidden("employee")